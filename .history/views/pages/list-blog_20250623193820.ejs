<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-50 to-purple-100 min-h-screen p-6 flex flex-col items-center">

  <div class="w-full max-w-3xl">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">üìù My Blog List</h1>

   
      <div class="grid gap-6 sm:grid-cols-2">
        <% todos.forEach(function(todo) { %>
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition p-6 border-l-4 
                      <%= todo.completed ? 'border-green-500' : 'border-yellow-400' %>">
            <div class="flex items-center justify-between mb-2">
              <h2 class="text-xl font-semibold text-gray-900"><%= todo.title %></h2>
              
              <% if (todos.completed) { %>
                <span class="inline-flex items-center text-green-600 font-medium text-sm">
                  ‚úÖ Done
                </span>
              <% } else { %>
                <span class="inline-flex items-center text-yellow-600 font-medium text-sm">
                  ‚è≥ Pending
                </span>
              <% } %>
            </div>
             <a href="/delete/<%- todo.id%>"><button class="text-red-500 hover:text-red-700" data-id="<%= todo.id %>">Delete</button></a>
                

            <a href="/edit/<%- todo.id%>"><button class="text-blue-500 hover:text-blue-700" data-id="<%= todo.id %>">Edit</button></a>
            <p class="text-gray-600 text-sm mb-2"><%= todos.description || 'No description provided.' %></p>
            <p class="text-xs text-gray-500">üìÖ <%= todos.date || 'No date' %></p>
          </div>



          <div class="text-center mt-6">
      <a href="/" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">‚Üê Back to Home</a>
    </div>


     
  

        <% }); %>
      </div>
 

</body>
</html>