<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Tasks</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-10">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold text-center text-purple-700 mb-8">üìù Task List</h1>

    <% function renderTasks(title, tasks) { %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-1"><%= title %></h2>
        <% if (tasks.length === 0) { %>
          <p class="text-gray-500 italic">No <%= title.toLowerCase() %> tasks.</p>
        <% } else { %>
          <ul class="space-y-4">
            <% tasks.forEach(task => { %>
              <li class="bg-gray-50 p-4 rounded-lg shadow-sm flex justify-between items-center">
                <div>
                  <p class="text-lg font-medium text-gray-800"><%= task.task %></p>
                  <p class="text-sm text-gray-600"><%= task.discription %></p>
                  <p class="text-sm text-gray-500">Due: <%= task.date %></p>
                </div>
                <div class="flex gap-2">
                  <a href="/edit/<%= task.id %>" class="text-blue-600 hover:underline font-semibold">Edit</a>
                  <a href="/delete/<%= task.id %>" class="text-red-600 hover:underline font-semibold" onclick="return confirm('Are you sure you want to delete this task?');">Delete</a>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    <% } %>

    
    <div class="text-center mt-6">
      <a href="/" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">‚Üê Back to Home</a>
    </div>
  </div>
</body>
</html>
